{
  "name": "shadownloader-client",
  "version": "2.0.0",
  "description": "Shadownloader is an ephemeral self-hosted file sharing system that prioritises anonymity and data privacy. Upload a file, and the it disappears the moment it is downloaded by someone else.",
  "main": "src/main.js",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/willtda"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WillTDA/Shadownloader"
  },
  "build": {
    "appId": "com.diamonddigitaldev.shadownloaderclient",
    "productName": "Shadownloader Client",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/img/shadownloader.ico",
      "fileAssociations": [
        {
          "ext": "*",
          "name": "All Files",
          "role": "Viewer"
        }
      ]
    },
    "nsis": {
      "perMachine": true,
      "createDesktopShortcut": true,
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/img/shadownloader.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "src/img/shadownloader.png"
    }
  },
  "keywords": [
    "files",
    "sharing",
    "data",
    "privacy",
    "anonymous",
    "utility",
    "tool",
    "self-hosted"
  ],
  "author": "Diamond Digital Development <https://diamonddigital.dev>",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "electron-store": "^11.0.2"
  }
}
