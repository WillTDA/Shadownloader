{
  "name": "dropgate-client",
  "version": "2.2.0",
  "description": "A self-hostable, privacy-first file sharing system with both hosted upload and direct P2P transfer capabilities.",
  "main": "src/main.js",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/willtda"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WillTDA/Dropgate"
  },
  "build": {
    "appId": "com.diamonddigitaldev.dropgateclient",
    "productName": "Dropgate Client",
    "artifactName": "Dropgate-Client-Setup-${version}.${ext}",
    "files": [
      "**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "WillTDA",
      "repo": "Dropgate"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/img/dropgate.ico",
      "fileAssociations": [
        {
          "ext": "*",
          "name": "All Files",
          "role": "Viewer"
        }
      ]
    },
    "nsis": {
      "perMachine": true,
      "createDesktopShortcut": true,
      "include": "installer.nsh"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/img/dropgate.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "src/img/dropgate.png"
    }
  },
  "keywords": [
    "files",
    "sharing",
    "data",
    "privacy",
    "anonymous",
    "utility",
    "tool",
    "self-hosted"
  ],
  "author": "Diamond Digital Development <https://diamonddigital.dev>",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9"
  }
}